# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password-here
MONGO_INITDB_DATABASE=chat-rooms

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-at-least-32-characters
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=info

# Frontend URLs
VITE_API_URL=https://api.yourdomain.com
VITE_SOCKET_URL=https://api.yourdomain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Environment
ENVIRONMENT=production

# SSL Configuration (paths to SSL certificates)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring (optional)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# File Upload (if implemented)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Redis (if using for caching)
REDIS_URL=redis://redis:6379

# Email (if notifications are implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook URLs (for notifications/integrations)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
